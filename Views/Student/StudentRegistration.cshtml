@model HIS.Models.StudentDto


@{
    ViewBag.Title = "Student Registration";
}


<div class="" style="width:100%;padding:10px;">
    <div class="row">

        <div class="col-md-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Student Registration</h3>
                </div>

                @using (Html.BeginForm("StudentRegistration", "Student", FormMethod.Post))
                {


                    <div class="form-group col-md-12">
                        <label for="exampleInputPassword1">First Name</label>
                        @Html.TextBoxFor(m => m.StudentRegistrationObj.FirstName, new { placeholder = "First Name", @class = "form-control" })
                    </div>
                    <div class="form-group col-md-12">
                        <label for="exampleInputPassword1">Second Name</label>
                        @Html.TextBoxFor(m => m.StudentRegistrationObj.SecondName, new { placeholder = "Second Name", @class = "form-control" })
                    </div>

                    <div class="form-group col-md-12">
                        <label for="exampleInputPassword1">Class</label>
                        @Html.DropDownListFor(x => x.StudentRegistrationObj.classid, Model.classlist, "Select Class", new { @class = "form-control" })
                    </div>


                    <div style="text-align:center">
                        <input type="submit" value="Save" class="btn-group-lg  btn-dark" />
                    </div>


                }


            </div>
        </div>
    </div>
</div>




